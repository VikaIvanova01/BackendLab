{% extends "layout.twig" %}
{% import "macros.twig" as macros %}

{% block content %}
<form class="row g-3">
	<div class="col-md-2">
		<label for="type" class="form-label">Тип</label>
		<select id="type" class="form-select" name="type">
			<option selected value=" "> </option>
			<option value="%">Все</option>
			{% for type in types %}
			<option value={{type.name}}>{{type.name|title}}</option>
			{% endfor %}
		</select>
	</div>
	<div class="col-md-3">
		<label for="title" class="form-label">Название</label>
		<input type="title" class="form-control" id="title" name="title">
	</div>
	<div class="col-md-4">
		<label for="info" class="form-label">Описание</label>
		<input type="info" class="form-control" id="info" name="info">
	</div>
	<div class="col-12">
		<button type="submit" class="btn btn-primary">Найти</button>
	</div>
</form>
<ul class="list-group pt-1">
{% for object in objects %}
<a href="/animals_obj/{{object.id}}" class="list-group-item list-group-item-action">{{object.title|title}}</a>
{% endfor %}
</ul>
{% endblock %}